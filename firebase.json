{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "predeploy": ["npm --prefix frontend run build"]
  },
  "hosting": {
    "public": "frontend/dist",
    "ignore": ["**/.*", "**/node_modules/**"],
    "cleanUrls": true,
    "headers": [
      {
        "source": "**/*.@(js|css|svg|png|jpg|jpeg|webp|ico)",
        "headers": [
          { "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }
        ]
      }
    ],
    "rewrites": [
      { "source": "/api/**", "function": "us-central1:app" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
